<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_50">

    <RelativeLayout
        android:id="@+id/rlyt_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sl_btn">


        <TextView
            android:id="@+id/tv_video_talk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_3"
            android:layout_marginRight="@dimen/dimen_40"
            android:text="@string/video_chat"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_5"
            android:layout_marginRight="@dimen/dimen_10"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_5"
            tools:text="user313user313user313user313user313user313user313"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxEms="10"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_avatar"
            android:layout_toEndOf="@+id/iv_avatar"
            android:layout_marginLeft="@dimen/dimen_10"/>

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginLeft="9dp"
            tools:src="@mipmap/ic_group_talk"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="9dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>